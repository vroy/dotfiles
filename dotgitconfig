[user]
  email = vincentroy8@gmail.com
	name = Vincent Roy

[core]
  editor = emacs
	pager = less -r

[color]
  ui = auto

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[color "diff"]
  meta = blue
  frag = magenta
  old = red
  new = green

[push]
  default = current

[alias]
  a    = add
  c    = commit -v
  cm   = commit -m
  ca   = commit -a
  co   = checkout
  d    = diff
  dc   = diff --cached
  s    = status
  ss   = status -sb
  pom  = push origin master
  l    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ff   = merge --no-commit
  recent = "for-each-ref --count=5 --sort=-committerdate --format='%(refname:short)' refs/heads/"
  worklog = log --format='%C(green)%ci %C(yellow) %h %C(blue) %cn %C(reset) %s' --author='Vincent Roy'
  b = branch
  g = gb

[difftool]
	prompt = false

[advice]
	statusHints = false
[diff]
	renames = copies
	mnemonicprefix = true

[hub]
protocol = https

[credential]
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
