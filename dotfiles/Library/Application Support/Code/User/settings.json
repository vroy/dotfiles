{
    "docker.showExplorer": false,

    "editor.tabSize": 2,
    "editor.fontSize": 16,
    "editor.lineHeight": 19.5,
    "editor.cursorStyle": "block",
    "editor.autoClosingBrackets": false,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "off",
    "editor.folding": false,
    "editor.find.seedSearchStringFromSelection": false,

    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue",
        "vue-html"
    ],

    "explorer.openEditors.visible": 0,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "files.trimTrailingWhitespace": true,

    "markdown.extension.quickStyling": true,
    "markdown.extension.showExplorer": false,

    "python.linting.lintOnSave": false,
    "python.linting.pylintPath": "/usr/local/bin/pylint",

    "terraform.formatOnSave": true,
    "terraform.formatVarsOnSave": true,
    "terraform.indexing": {
        "enabled": true,
        "indexerPath": "terraform-index",
        "liveIndexing": true,
        "delay": 500
    },

    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,

    "workbench.colorCustomizations": {
        "statusBar.background": "#90AE92",
        "editor.background": "#3F3F3F",
        "editor.lineHighlightBackground": "#383838"
    },

    "editor.tokenColorCustomizations": {
        "comments": "#7F9F7F",
        "strings": "#CC9393",
        "functions": "#93E0E3",
        "keywords": "#F0DFAF",
        "variables": "#DFAF8F"
    }
}