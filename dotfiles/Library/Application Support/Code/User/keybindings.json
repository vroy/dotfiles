[
  // remove conflicting shortcuts explicitly
  {
    "key": "ctrl+k",
    "command": "-deleteAllRight"
  },
  {
    "key": "ctrl+k",
    "command": "-emacs.C-k"
  },
  {
    "key": "alt+w",
    "command": "-emacs.M-w",
    "when": "editorTextFocus"
  },

  {
    "key": "ctrl+w",
    "command": "-emacs.C-w",
    "when": "editorTextFocus && !editorReadonly"
  },

  // clipboard and kill ring
  {
    "key": "alt+y",
    "command": "vroy.paste",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+y",
    "command": "vroy.paste",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+w",
    "command": "vroy.cut",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+w",
    "command": "vroy.copy",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k",
    "command": "vroy.killLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "vroy.cutToEndOfLine",
    "when": "editorTextFocus"
  },

  // misc. editor shortcuts

  {
    "key": "ctrl+c ctrl+k",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+-",
    "command": "undo",
    "when": "editorTextFocus"
  },

  // file navigation
  {
    "key": "cmd+[",
    "command": "workbench.action.focusPreviousGroup"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "ctrl+x ctrl+f",
    "command": "workbench.action.quickOpen"
  }
]