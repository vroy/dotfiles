[
  // remove conflicting shortcuts explicitly
  {
    "key": "ctrl+k",
    "command": "-deleteAllRight"
  },
  {
    "key": "ctrl+k",
    "command": "-emacs.C-k"
  },
  {
    "key": "alt+w",
    "command": "-emacs.M-w",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+w",
    "command": "-emacs.C-w"
  },
  {
    "key": "ctrl+w",
    "command": "-closeFindWidget"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.files.saveAs"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.files.saveAs"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.switchWindow"
  },
  {
    "key": "cmd+c",
    "command": "-editor.action.clipboardCopyAction"
  },
  {
    "key": "alt+d",
    "command": "-deleteWordRight"
  },
  {
    "key": "alt+backspace",
    "command": "-deleteWordLeft"
  },
  {
    "key": "ctrl+g",
    "command": "-emacs.C-g"
  },
  {
    "key": "ctrl+g",
    "command": "-emacs.exitMarkMode"
  },

  { "key": "shift+cmd+k", "command": "-editor.action.deleteLines" },

  // clipboard and kill ring
  {
    "key": "alt+y",
    "command": "vroy.pasteCycle",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+y",
    "command": "vroy.paste",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+w",
    "command": "vroy.cut",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+w",
    "command": "vroy.copy",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+c",
    "command": "vroy.copy",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k",
    "command": "vroy.killLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "vroy.killToEndOfLine",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+ctrl+k",
    "command": "vroy.killToBeginningOfLine",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+d",
    "command": "vroy.killWordRight",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+backspace",
    "command": "vroy.killWordLeft",
    "when": "editorTextFocus"
  },

  {
    "key": "ctrl+g",
    "command": "vroy.cancel",
    "when": "editorTextFocus"
  },

  // misc. editor shortcuts
  {
    "key": "ctrl+c ctrl+k",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+-",
    "command": "undo",
    "when": "editorTextFocus"
  },

  // file navigation
  {
    "key": "cmd+[",
    "command": "workbench.action.focusPreviousGroup"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "ctrl+x ctrl+f",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+w",
    "command": "-emacs.C-w",
    "when": "editorTextFocus && !editorReadonly"
  }
]