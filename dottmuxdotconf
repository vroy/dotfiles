set-option -g prefix C-a
bind-key C-a send-prefix

# Faster to rotate through the latest windows.
bind-key C-a last-window

# Allows for C-a C-d to work as well (a bit easier to type)
bind-key ^D detach-client

# C-a r reloads the configuration
bind-key r source-file ~/.tmux.conf

# Directly navigate through the windows with the arrows
bind-key -n C-right next-window
bind-key -n C-left previous-window

# Directly navigate through the panes with the arrows
bind-key -n C-up select-pane -t :.-
bind-key -n C-down select-pane -t :.+

# A way to split the windows that is easier to remember
unbind %
bind-key | split-window -h
bind-key - split-window -v

# 0 is too far from 1
set-option -g base-index 1

# Make the current window more visible
set-window-option -g window-status-current-fg white
set-window-option -g window-status-current-bg black
set-window-option -g window-status-current-attr bright

# Let me know when something changed in a window.
set-window-option -g monitor-activity on

# Make the panes more visible
set-option -g pane-active-border-bg white
set-option -g pane-active-border-fg black


bind-key -n M-1 select-window -t 1
bind-key -n M-2 select-window -t 2
bind-key -n M-3 select-window -t 3
bind-key -n M-4 select-window -t 4
bind-key -n M-5 select-window -t 5
bind-key -n M-6 select-window -t 6
bind-key -n M-7 select-window -t 7
bind-key -n M-8 select-window -t 8
bind-key -n M-9 select-window -t 9
bind-key -n M-0 select-window -t 10